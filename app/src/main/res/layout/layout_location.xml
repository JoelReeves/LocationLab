<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWidthWrapHeight"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtLocationHeader"
        style="@style/LocationHeader"
        android:layout_marginTop="@dimen/header_marginTop"
        android:text="@string/device_location"/>

    <TextView
        android:id="@+id/txtLatitude"
        style="@style/LocationItem"
        android:layout_below="@id/txtLocationHeader"/>

    <TextView
        android:id="@+id/txtLongitude"
        style="@style/LocationItem"
        android:layout_below="@id/txtLatitude"/>

</RelativeLayout>